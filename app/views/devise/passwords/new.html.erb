<h2>忘記密碼？</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "帳號信箱" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  <br>
  <div class="actions">
  <div class="btn-group">
    <%= f.submit "傳密碼重設信", class: "btn btn-primary" %>
    <%= link_to "帳號登入", new_session_path(resource_name),  class: "btn btn-warning" %>
  </div>
  </div>
<% end %>

