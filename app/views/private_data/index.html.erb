<% if user_signed_in? %>
<% @private_data.each do |private_datum| %>
  <% if private_datum.user==current_user %>
  <div class="private_datum row clearfix">
    <h2>
      <%= link_to private_datum.name, private_datum %>
      <small class="author"><%= time_ago_in_words(private_datum.created_at) %></small>
    </h2>
  </div>
  <% end %>
<% end %>

<% else %>
<div class="private_datum row clearfix">
  <h2>動態消息</h2>
  <h2>留言板</h2>
</div>

<% end %>
